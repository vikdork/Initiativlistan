@model Initiativlistan.Models.Priolista

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="Create">
    
        <h4>Priolista</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="ärendeägare"></label>
            <input asp-for="ärendeägare" class="form-control" />
            <span asp-validation-for="ärendeägare" class="text-danger" />
        </div>    
        <div class="form-group">
            <label asp-for="beställare"></label>
            <input asp-for="beställare" class="form-control" />
            <span asp-validation-for="beställare" class="text-danger" />
        </div>  
        <div class="form-group">
           <label asp-for="namnPåAktvivitet"></label>
           <textarea rows="8" cols="0" asp-for="namnPåAktvivitet" class="form-control"></textarea>
            <span asp-validation-for="namnPåAktvivitet" class="text-danger" />
        </div>
        <div class="form-group">
            <label asp-for="beskrivning"></label>
            <textarea rows="8" cols="0" asp-for="beskrivning" class="form-control"></textarea>
            <span asp-validation-for="beskrivning" class="text-danger" />
        </div>
        <div class="form-group">
            <label asp-for="förvaltning"></label>
            <div class="radio">
               <label><input type="radio" value="KSF" asp-for="förvaltning" />KSF</label>
            </div>
            <div class="radio">
                <label><input type="radio" value="KUF" asp-for="förvaltning" />KUF</label>
            </div>
            <div class="radio">
                <label><input type="radio" value="NBF" asp-for="förvaltning"/>NBF</label>
            </div>
            <div class="radio">
                <label><input type="radio" value="SÄF" asp-for="förvaltning"/>SÄF</label>
            </div>
            <div class="radio">
                <label><input type="radio" value="IT-SG" asp-for="förvaltning"/>IT-SG</label>
            </div>
            <div class="radio">
                <label><input type="radio" value="IT-LG" asp-for="förvaltning"/>IT-LG</label>
            </div>
            <div class="radio">
                <label><input type="radio" value="IT internt" asp-for="förvaltning"/>IT internt</label>
            </div>
            <div class="radio">
                <label>
                <input type="radio" value="KLG" asp-for="förvaltning"/>
                KLG
                </label>
            </div>
  
        </div>
        <div class="form-group">
            <label asp-for="finnsIPlan"></label>
            <div class="radio">
                <label>
                    <input type="radio" id="finnsPlan1" value="KSF:s verksamhetsplan" asp-for="finnsIPlan"/>KSF:s verksamhetsplan</label>
                 </div> 
            <div class="radio">
                <label>
                    <input type="radio"  id="finnsPlan2" value="IT-plan" asp-for="finnsIPlan" />IT-plan</label>
            </div> 
            <div class="radio">
                <label>
                    <input type="radio" id="finnsPlan3" value="IT-sektionens arbetsplan" asp-for="finnsIPlan" />IT-sektionens arbetsplan</label>
            </div> 
            <div class="radio">
                <label>
                    <input type="radio" id="finnsPlan4" value="Internkontroll" asp-for="finnsIPlan" />Internkontroll</label>
            </div>  
            <div class="radio">
                <label>
                    <input type="radio" id="finnsPlan5"/>Other:</label>
                    <input type="text" id="other" disabled asp-for="finnsIPlan">
            </div>   
         </div>
    
    <div class="form-group">
    <label asp-for="typAvFörändring"></label>
        <br />
        <select asp-for="typAvFörändring">
            <option value="RFC <20 h">RFC <20 h</option>
            <option value="Projekt eller uppdrag >20 h">Projekt eller uppdrag >20 h</option>
        </select>
    
    </div>
         


        <div class="form-group">
            <label asp-for="typAvFörändring"></label>
            <input asp-for="typAvFörändring" class="form-control" />
            <span asp-validation-for="typAvFörändring" class="text-danger" />
        </div>
        <div class="form-group">
            <label>Är ändringen akut?</label>
            <div class="checkbox">
                <label><input type="checkbox" asp-for="akut">Ja</label>
            </div>
            <div class="checkbox">
                <label><input type="checkbox">Nej</label>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="beskrivAkut"></label>
            <input asp-for="beskrivAkut" class="form-control" />
            <span asp-validation-for="beskrivAkut" class="text-danger" />
        </div>
        <div class="form-group">
        <label asp-for="kategorisering"></label>
        <input asp-for="kategorisering" class="form-control" />
        <span asp-validation-for="kategorisering" class="text-danger" />
        </div>
        <div class="form-group">
            <label asp-for="nuvarandePåverkan"></label>
            <input asp-for="nuvarandePåverkan" class="form-control" />
            <span asp-validation-for="nuvarandePåverkan" class="text-danger" />
        </div>
        <div class="form-group">
            <label asp-for="framtidaPåverkan"></label>
            <input asp-for="framtidaPåverkan" class="form-control" />
            <span asp-validation-for="framtidaPåverkan" class="text-danger" />
        </div>
        <div class="form-group">
            <label asp-for="önskatDatum"></label>
            <input asp-for="önskatDatum" class="form-control" />
            <span asp-validation-for="önskatDatum" class="text-danger" />
        </div>
        <div class="form-group">
            <label asp-for="tidasram"></label>
            <input asp-for="tidasram" class="form-control" />
            <span asp-validation-for="tidasram" class="text-danger" />
        </div>
        <div class="form-group">
            <label asp-for="kostnader"></label>
            <input asp-for="kostnader" class="form-control" />
            <span asp-validation-for="kostnader" class="text-danger" />
        </div>
        <div class="form-group">
            <label asp-for="budget"></label>
            <input asp-for="budget" class="form-control" />
            <span asp-validation-for="budget" class="text-danger" />
        </div>
        <div class="form-group">
            <label asp-for="beroende"></label>
            <textarea asp-for="beroende" class="form-control" rows="5" cols="0"></textarea>
            <span asp-validation-for="beroende" class="text-danger" />
        </div>
        <div class="form-group">
            <label asp-for="verksamhetspåverkarn"></label>
            <input asp-for="verksamhetspåverkarn" class="form-control" />
            <span asp-validation-for="verksamhetspåverkarn" class="text-danger" />
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
  </form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    
    <script>
        $("#finnsPlan5").click(function () { $("#other").prop("disabled", false); });
        $("#finnsPlan1").click(function () { $("#other").prop("disabled", true); });
        $("#finnsPlan2").click(function () { $("#other").prop("disabled", true); });
        $("#finnsPlan3").click(function () { $("#other").prop("disabled", true); });
        $("#finnsPlan4").click(function () { $("#other").prop("disabled", true); });
    </script>
 }

